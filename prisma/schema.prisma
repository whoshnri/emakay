generator client {
  provider = "prisma-client"
  output = "../app/generated/prisma/client"
}

datasource db {
  provider = "postgresql"
}

model SchoolWork {
  id          String   @id @default(cuid())
  title       String
  description String
  coverImage  String
  gallery     String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model BrainDump {
  id          String   @id @default(cuid())
  title       String
  description String
  coverImage  String
  gallery     String[]
  published   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model SiteSettings {
  id              String @id @default("singleton")
  aboutImage      String
  aboutText       String   @default("I am a fashion designer dedicated to creating architecture for the body...")
  contactEmail    String
  phoneNumber     String   @default("+1 234 567 890")
  footerText      String   @default("EMAKAY STUDIO Â© EST. 2024")
  seoTitle        String
  seoDescription  String
}

model SocialLink {
  id    String @id @default(cuid())
  label String
  url   String
}


model User {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
